@{
  Layout = "_Layout";
}

@using PierresMarket.Models;

<h1>Treat</h1>

@if (@Model.Count == 0)
{
  <h3>No treats have been added yet!</h3>
} 

<ul>
  @foreach(Treat treat in Model)
  {
    <li></li>
    <li>@Html.ActionLink($"{treat.TreatName}", "Details", new { id = treat.TreatId }) | @treat.TreatId</li>
  }
</ul>

<p>@Html.ActionLink("Add new treat", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
